# build
FROM node:20 AS build
WORKDIR /app
COPY ./browser /app/browser
COPY package*.json ./
RUN npm ci
COPY . .
RUN npm run build -- --configuration production

# serve
FROM nginx:stable-alpine
COPY --from=build /app/dist/MyFirstAngularApp /usr/share/nginx/html
COPY nginx.conf /etc/nginx/conf.d/default.conf   # optional, for SPA routing
EXPOSE 80
CMD ["nginx","-g","daemon off;"]